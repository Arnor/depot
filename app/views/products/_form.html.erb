<%= semantic_form_for(@product) do |f| %>
  <%= f.error_messages %> 
  <%= f.inputs do %>  
    <%= f.input :title, :label => "Название", :required => true %>  
    <%= f.input :description, :label => "Описание", :required => true, :rows => 5 %>  
    <%= f.input :image_url, :label => "Изображение", :required => true %>  
    <%= f.input :price, :label => "Цена", :required => true, :hint => "Цена с точностью 2 знака после запятой." %>  
  <% end %> 
  <%= f.buttons %>
<% end %>

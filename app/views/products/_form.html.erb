<%= semantic_form_for(@product) do |f| %>
  <%= f.error_messages %> 
  <%= f.inputs do %>  
    <%= f.input :title, :required => true %>  
    <%= f.input :description, :required => true, :rows => 5 %>  
    <%= f.input :image_url, :required => true %>  
    <%= f.input :price, :required => true %>  
  <% end %> 
  <%= f.buttons %>
<% end %>
